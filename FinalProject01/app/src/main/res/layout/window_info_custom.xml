<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/view_linear_expand"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/show_data1_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="20sp"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/custom_progressbar"
            />
        <ProgressBar
            android:id="@+id/show_data2_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/custom_progressbar"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/card_tv_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가게이름"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/card_tv_store_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="가게에 대한 설명 분위기 카운트 등등 \n 다양한 정보를 제공하고 있습니다.\n 별점은 몇점입니다."
        />

</LinearLayout>